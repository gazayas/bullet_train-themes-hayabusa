<% attributes ||= [] %>
<% attributes.select! { |attribute| form.object.errors[attribute].any? } %>

<% if notice.present? %>
  <%= render 'account/shared/alert' do %>
    <%= notice %>
  <% end %>
<% end %>

<% if alert.present? || flash[:error] %>
  <%= render 'account/shared/alert', color: 'red' do %>
    <%= alert %>
    <%= flash[:error] %>
  <% end %>
<% end %>
