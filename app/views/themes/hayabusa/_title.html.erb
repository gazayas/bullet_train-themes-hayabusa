<% yield p = np %>

<div class="flex flex-row items-center">
  <div class="flex-auto">
    <h1 class="font-semibold text-base text-slate-100 dark:text-white">
      <%= p.content_for(:title) %>
    </h1>
  </div>
  <div class="flex-auto text-right leading-none">
  <span class="bg-white py-2 rounded">
    <% if p.content_for? :actions %>
      <%= p.content_for :actions %>
    <% end %>
  </span>
  </div>
</div>

<div class="mb-4">
  <%= render "shared/line" %>
</div>
